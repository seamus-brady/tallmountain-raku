use v6.d;
use Test;
use lib 'lib';
use Util::Config;

plan 4;

subtest 'Util::Config loaded' => {
    my $config = Util::Config.new;
    isa-ok $config, Util::Config;
}

subtest 'Util::Config string test configuration loaded' => {
    my $config = Util::Config.new;
    is $config.get_config('for_testing', 'test_string_value'), 'Hello world!', 'Test config string loaded.';
}

subtest 'Util::Config number test configuration loaded' => {
    my $config = Util::Config.new;
    is $config.get_config('for_testing', 'test_numeric_value'), 42, 'Test config number loaded.';
}

subtest 'Util::Config exception thrown' => {
    my $config = Util::Config.new;
    dies-ok { $config.get_config('OMG!!', 'wtf??!!') }, 'Exception thrown for missing config key';
}

done-testing;

