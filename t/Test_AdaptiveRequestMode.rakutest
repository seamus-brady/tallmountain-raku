use v6;
use Test;
use AdaptiveRequestMode;

plan 5;

subtest 'Precision Mode' => {
    my $precision = AdaptiveRequestMode.precision-mode;
    is $precision.mode, AdaptiveRequestMode::Mode::PRECISION_MODE, 'Mode should be Precision Mode';
    is $precision.temperature, 0.2, 'Temperature should be 0.2';
    is $precision.top-p, 0.1, 'Top-p should be 0.1';
    is $precision.max-tokens, AdaptiveRequestMode::DEFAULT-MAX-TOKENS, 'Max tokens should be default';
}

subtest 'Controlled Creative Mode' => {
    my $creative = AdaptiveRequestMode.controlled-creative-mode;
    is $creative.mode, AdaptiveRequestMode::Mode::CONTROLLED_CREATIVE_MODE, 'Mode should be Controlled Creative Mode';
    is $creative.temperature, 0.2, 'Temperature should be 0.2';
    is $creative.top-p, 0.9, 'Top-p should be 0.9';
    is $creative.max-tokens, AdaptiveRequestMode::DEFAULT-MAX-TOKENS, 'Max tokens should be default';
}

