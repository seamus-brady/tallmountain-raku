use v6;
use Test;
use LLM::AdaptiveRequestMode;

plan 5;

subtest 'LLM::AdaptiveRequestMode Precision Mode' => {
    my $precision = LLM::AdaptiveRequestMode.precision_mode;
    is $precision.mode, LLM::AdaptiveRequestMode::Mode::PRECISION_MODE, 'Mode should be Precision Mode';
    is $precision.temperature, 0.2, 'Temperature should be 0.2';
    is $precision.top_p, 0.1, 'top_p should be 0.1';
    is $precision.max_tokens, LLM::AdaptiveRequestMode::DEFAULT_MAX_TOKENS, 'Max tokens should be default';
}

