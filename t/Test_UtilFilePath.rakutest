use v6.d;
use Test;
use lib 'lib';
use Util::FilePath;

plan 3;

subtest 'Util::FilePath loaded' => {
    my $file_util = Util::FilePath.new;
    isa-ok $file_util, Util::FilePath;
}

subtest 'Util::FilePath normative calc prompt loaded' => {
    my $file_util = Util::FilePath.new;
    my Str $nc = $file_util.get-nc-prompt;
    ok $nc.defined, "normative calc prompt is defined";
}

subtest 'Util::FilePath normative np score prompt loaded' => {
    my $file_util = Util::FilePath.new;
    my Str $score-np = $file_util.get-norm-prop-score-prompt;
    ok $score-np.defined, "normative calc score prompt is defined";
}


done-testing;
