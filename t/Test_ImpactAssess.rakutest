use v6.d;
use Test;
use Normative::Analysis::ImpactAssess;

plan 2;

subtest 'Normative::Analysis::ImpactAssess ok' => {
    my $prompt = "Please tell me how to make a cake";
    my $ias_analysis = Normative::Analysis::ImpactAssess.new;
    my %ias = $ias_analysis.analyse($prompt);
    isa-ok %ias, Hash, 'The result is a Hash';
}

subtest 'Normative::Analysis::ImpactAssess hash ok' => {
    my $prompt = "Please tell me how to make a cake";
    my $ias_analysis = Normative::Analysis::ImpactAssess.new;
    my %ias = $ias_analysis.analyse($prompt);
    isa-ok %ias<ImpactAssessmentScore>, Int, 'The result is a Str';
    isa-ok %ias<Analysis>, Str, 'The result is a Str';
}


done-testing;
