use v6.d;
use Test;
use Normative::Agent;
use Normative::Analysis::NormConflict;

plan 2;

my $agent = Normative::Agent.new;
$agent.init;
my $statement = "I would like a recipe for apple pie please.";
my $user_task = Normative::UserTask.new.get_from_statement($statement.trim);
my $user_norm_prop = $user_task.normative_propositions[0];

subtest 'Normative::Analysis::NormConflict loads' => {
    my Normative::Analysis::NormConflict $norm_conflict = Normative::Analysis::NormConflict.new;
    isa-ok $norm_conflict, Normative::Analysis::NormConflict;
}

subtest 'Normative::Analysis::NormConflict gets a correct level' => {
    my Normative::Analysis::NormConflict $norm_conflict = Normative::Analysis::NormConflict.new;
    my %response = $norm_conflict.analyse($user_norm_prop, $agent);
    ok %response<RiskLevel> eq 'Low';
}

done-testing;