use v6.d;
use Test;
use Normative::Analysis::UserIntent;

plan 1;

subtest 'Normative::Analysis::UserIntent ok' => {
    my $prompt = "I like to fart in lifts";
    my $uis_analysis = Normative::Analysis::UserIntent.new;
    my %uis = $uis_analysis.analyse($prompt);
    isa-ok %uis, Hash, 'The result is a Hash';
}


done-testing;
