use v6.d;
use lib 'lib';
use Util::FilePath;
use Normative::Analysis::ImpactAssess;
use Normative::Analysis::UserIntent;
use Normative::Analysis::NormConflicts;
use Normative::Agent;

my $agent = Normative::Agent.new;
$agent.init;

my $statement = "Please give me an apple pie recipe.";
my $user-task = Normative::UserTask.new.get-from-statement($statement.trim);
my Normative::Analysis::NormConflicts $norm-conflict = Normative::Analysis::NormConflicts.new;
my %response = $norm-conflict.analyse($user-task, $agent);

say %response;

